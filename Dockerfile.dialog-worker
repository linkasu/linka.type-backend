FROM golang:1.24.5 AS build

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/dialog-worker ./cmd/dialog-worker

FROM gcr.io/distroless/base-debian12
COPY --from=build /out/dialog-worker /dialog-worker
ENTRYPOINT ["/dialog-worker"]
